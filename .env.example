# Database
DATABASE_URL="postgresql://user:password@localhost:5432/collabmap"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# GitHub API (for data collection)
GITHUB_ACCESS_TOKEN="your-github-personal-access-token"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"

# Chroma Vector DB
CHROMA_URL="http://localhost:8000"
CHROMA_COLLECTION="collabmap_embeddings"

# Redis (for queue management)
REDIS_URL="redis://localhost:6379"

# Application Settings
NODE_ENV="development"
PORT="3000"

# Data Pipeline
PIPELINE_BATCH_SIZE="100"
PIPELINE_RATE_LIMIT="5000"
PIPELINE_CONCURRENT_JOBS="5"

# Feature Flags
ENABLE_MENTORSHIP="true"
ENABLE_COORDINATION="true"
ENABLE_COMMUNITY="true"